{
  "name": "Origin Protocol Shop",
  "description": "A decentralized ",
  "repository": "https://github.com/OriginProtocol/origin/dapps/shop",
  "logo": "https://www.originprotocol.com/static/img/origin-logo-dark.png",
  "keywords": ["ethereum", "node", "ipfs"],
  "addons": [
    {
      "plan": "heroku-postgresql:hobby-dev"
    }
  ],
  "env": {
    "ADMIN_PW": {
      "description": "Admin page password",
      "generator": "secret",
      "required": true
    },
    "LISTING_ID": {
      "description": "Origin Marketplace contract Listing ID",
      "required": true
    },
    "NETWORK": {
      "description": "Ethereum Network. mainnet, rinkeby",
      "value": "mainnet",
      "required": true
    },
    "PGP_PRIVATE_KEY": {
      "description": "Private PGP key for decrypting orders",
      "required": true
    },
    "PGP_PRIVATE_KEY_PASS": {
      "description": "Password for decrypting PGP Private key",
      "required": true
    },
    "SITE": {
      "description": "Site config",
      "value": "origin"
    },
    "STRIPE_BACKEND": {
      "description": "Stripe Secret"
    },
    "STRIPE_KEY": {
      "description": "Stripe Public key"
    },
    "STRIPE_WEBHOOK_SECRET": {
      "description": "Stripe webhook secret"
    },
    "WEB3_PK": {
      "description": "Private Ethereum Key. Used to make offers on behalf of credit card users."
    },
    "SMTP_HOST": {
      "description": "SMTP Host for email notifications",
      "value": "smtp.gmail.com"
    },
    "SMTP_USER": {
      "description": "SMTP Username",
      "value": "user@gmail.com"
    },
    "SMTP_PASS": {
      "description": "SMTP Password",
      "value": "gmail password"
    },
    "SUPPORT_EMAIL": {
      "description": "Email from which to send notifications"
    },
    "EMAIL_SUBJECT": {
      "description": "Subject of notification email",
      "value": "Order receipt"
    },
    "PUBLIC_URL": {
      "description": ""
    },
    "PROVIDER_WS": {
      "description": "Ethereum provider websocket",
      "required": true
    },
    "CONTRACT": {
      "description": "Origin Marketplace contract address",
      "value": "0x698ff47b84837d3971118a369c570172ee7e54c2",
      "required": true
    },
    "IPFS_GATEWAY": {
      "description": "IPFS Gateway",
      "value": "https://ipfs.originprotocol.com",
      "required": true
    },
    "IPFS_API": {
      "description": "IPFS API",
      "value": "https://ipfs.originprotocol.com",
      "required": true
    }
  }
}
